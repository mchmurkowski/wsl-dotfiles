root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = false

[*.{css,scss,js,html}]
indent_size = 2

[*.json]
indent_size = 4

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 2
insert_final_newline = true